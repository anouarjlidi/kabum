{% extends 'base.html.twig' %}

{% block title %}Add a new product{% endblock %}

{% block body %}
  <div class="container">
    {{ form_start(form) }}
      {{ form_errors(form) }}

      {{ form_row(form.name) }}
      {{ form_row(form.description) }}
      {{ form_row(form.price) }}
      {{ form_row(form.imageFile) }}

      {# The submit button is created here to preserve the form's reusability
      for other purposes #}
      <div class="form-group">
        <input type="submit" class="btn btn-kabum-orange" value="Create"/>
      </div>
    {{ form_end(form) }}
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ encore_entry_script_tags('admin') }}
{% endblock %}
