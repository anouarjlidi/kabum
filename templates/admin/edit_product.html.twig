{% extends 'admin/layout.html.twig' %}

{% block title %}{{ 'edit_product'|trans }} - {{ parent() }}{% endblock %}

{% block main %}
  <div class="container-fluid px-md-4">
    <h3 class="font-weight-light text-kabum-dark-blue my-3">
      {{ 'edit_product'|trans }}
    </h3>

    {{ form_start(form) }}
      {{ form_errors(form) }}

      {{ form_row(form.name) }}
      {{ form_row(form.description) }}
      {{ form_row(form.longDescription) }}
      {{ form_row(form.category) }}
      {{ form_row(form.price) }}

      <div class="row mb-3">
        <div class="col-sm-3 col-lg-2 text-center text-md-left my-3 my-md-0">
          <img src="{{ asset(product.image) }}" width="200"
            class="img-thumbnail" alt="{{ 'current_product_image'|trans }}">
        </div>
        <div class="col-sm-9 col-lg-10">
          {{ form_row(form.imageFile) }}
        </div>
      </div>

      {# The submit button is created here to preserve the form's reusability
      for other purposes #}
      <div class="form-group">
        <input type="submit" class="btn btn-kabum-orange" value="{{ 'apply_changes'|trans }}"/>
      </div>
    {{ form_end(form) }}
  </div>
{% endblock %}
