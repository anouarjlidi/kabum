{% extends 'admin/layout.html.twig' %}

{% block title %}{{ 'overview'|trans }} - {{ parent() }}{% endblock %}

{% block main %}
  <h3 class="font-weight-light text-secondary mb-3">
    <i class="fas fa-history" aria-hidden="true"></i>
    {{ 'log_viewer'|trans }}
  </h3>

  {% if logs %}
    <pre class="log-viewer"><code>{{ logs }}</code></pre>
  {% else %}
    <div class="admin-logs-screen">
      <i class="fas fa-question text-silver fa-4x mb-4" aria-hidden="true"></i>
      <p class="text-silver text-center lead">{{ 'no_records_found'|trans }}</p>
    </div>
  {% endif %}
{% endblock %}
