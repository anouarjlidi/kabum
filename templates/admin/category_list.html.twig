{% extends 'base.html.twig' %}

{% block title %}{{ 'manage_categories'|trans }} - {{ parent() }}{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  {{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block body %}
  <div class="container">
    {{ form_start(form) }}
      {{ form_errors(form) }}

      {{ form_row(form.name) }}

      {# The submit button is created here to preserve the form's reusability
      for other purposes #}
      <div class="form-group">
        <input type="submit" class="btn btn-kabum-orange" value="{{ 'add'|trans }}"/>
      </div>
    {{ form_end(form) }}

    <ul class="list-group">
      {% for category in categories %}
        <li class="list-group-item d-flex justify-content-between align-items-center">
          {{ category.name }}
          <span class="badge badge-primary badge-pill">{{ category.products|length }}</span>
        </li>
      {% endfor %}
    </ul>
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ encore_entry_script_tags('admin') }}
{% endblock %}
