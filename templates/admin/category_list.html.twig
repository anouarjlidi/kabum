{% extends 'admin/layout.html.twig' %}

{% block title %}{{ 'manage_categories'|trans }} - {{ parent() }}{% endblock %}

{% block main %}
  <div class="container-fluid">
    <h3 class="font-weight-light text-kabum-dark-blue my-3">
      {{ 'manage_categories'|trans }}
    </h3>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}
      {{ form_errors(form) }}

      {{ form_row(form.name) }}

      {# The submit button is created here to preserve the form's reusability
      for other purposes #}
      <div class="form-group">
        <input type="submit" class="btn btn-kabum-orange" value="{{ 'add'|trans }}"/>
      </div>
    {{ form_end(form) }}

    <ul class="list-group mb-4">
      {% for category in categories %}
        <li class="list-group-item d-flex justify-content-between align-items-center">
          {{ category.name }}
          <span class="badge badge-primary badge-pill">{{ category.products|length }}</span>
        </li>
      {% endfor %}
    </ul>
  </div>
{% endblock %}
