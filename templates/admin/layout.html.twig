{% extends 'base.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  {{ encore_entry_link_tags('admin') }}
{% endblock %}

{% macro renderMenuItem(targetRoute, label, iconClasses) %}
  {% set currentRouteName = app.request.attributes.get('_route') %}

  {% if currentRouteName == targetRoute %}
    <a class="control-panel-item control-panel-current-item" href="{{ path(targetRoute) }}"
      aria-current="page" aria-label="{{ label|trans }}">
      <div class="d-flex">
        <div class="align-self-center mr-2">
          <i class="{{ iconClasses }}" aria-hidden="true"></i>
        </div>
        <div class="text-nowrap text-truncate">
          {{ label|trans }}
        </div>
      </div>
    </a>
  {% else %}
    <a class="control-panel-item" href="{{ path(targetRoute) }}" aria-label="{{ label|trans }}">
      <div class="d-flex">
        <div class="align-self-center mr-2">
          <i class="{{ iconClasses }}" aria-hidden="true"></i>
        </div>
        <div class="text-nowrap text-truncate">
          {{ label|trans }}
        </div>
      </div>
    </a>
  {% endif %}
{% endmacro %}

{% block body %}
  <header class="header-bar bg-light">
    <button class="collapsible-toggle kabum-collapse-button d-lg-none" data-target="#nav-menu"
      aria-label="{{ 'toggle_main_menu'|trans }}" aria-expanded="false" aria-controls="nav-menu"
      aria-haspopup="true">
      <i class="fas fa-bars fa-lg" aria-hidden="true"></i>
    </button>
    <nav id="nav-menu" class="collapsible control-panel-menu bg-light d-lg-none">
      <div class="control-panel-menu-scrollable">
        {{ _self.renderMenuItem('main_page', 'back_to_store', 'fas fa-arrow-left') }}
        {{ _self.renderMenuItem('admin_new_product', 'add_new_product', 'fas fa-plus') }}
        {{ _self.renderMenuItem('admin_category_management', 'manage_categories', 'fas fa-tags') }}
      </div>
    </nav>
    <a href="{{ path('main_page') }}" class="d-none d-lg-flex align-items-center kabum-button px-3">
      <div class="d-flex">
        <div class="mr-2">
          <i class="fas fa-arrow-left fa-lg" aria-hidden="true"></i>
        </div>
        <div>
          {{ 'back_to_store'|trans }}
        </div>
      </div>
    </a>
    <a href="{{ path('main_page') }}" class="header-logotype" aria-label="{{ 'go_home_page'|trans }}">
      <img src="{{ asset('images/kabum.png') }}" class="header-logotype-img" alt="{{ 'logotype'|trans }}">
    </a>
    <div class="dropdown d-flex pr-1"> {# The right padding keeps the item from being too close to the edge #}
      <button class="kabum-button dropdown-toggle px-3" type="button" id="userMenu"
        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"
        aria-label="{{ 'user_menu'|trans }}">
        <i class="fas fa-user" aria-hidden="true"></i>
      </button>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userMenu">
        <a class="dropdown-item" href="{{ path('user_account') }}">{{ 'your_account'|trans }}</a>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="{{ path('app_logout') }}">{{ 'sign_out'|trans }}</a>
      </div>
    </div>
  </header>
  <div class="d-flex">
    <div class="control-panel-sidebar">
      {{ _self.renderMenuItem('admin_new_product', 'add_new_product', 'fas fa-plus') }}
      {{ _self.renderMenuItem('admin_category_management', 'manage_categories', 'fas fa-tags') }}
    </div>
    <main id="main-content" class="d-flex flex-column w-100">
      {% block main %}{% endblock %}
    </main>
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ encore_entry_script_tags('admin') }}
{% endblock %}
