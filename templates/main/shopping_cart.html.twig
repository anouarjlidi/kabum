{% extends 'main/layout.html.twig' %}

{% block title %}{{ 'shopping_cart'|trans }} - {{ parent() }}{% endblock %}

{% block main %}
  <section class="container-fluid">
    <h3 class="font-weight-light text-kabum-dark-blue m-3">
      {{ 'shopping_cart'|trans }}
    </h3>

    {% for product in cart %}
      <div class="border-bottom p-2 mb-2">
        <div class="row">
          <div class="col-3 col-sm-2 col-xl-1">
            <img src="{{ asset(product_image_directory ~ product.image) }}"
              class="img-fluid" alt="{{ 'product_image'|trans }}"/>
          </div>
          <div class="col-9 col-sm-10 col-xl-11">
            <span>{{ product.name }}</span>
          </div>
        </div>
      </div>
    {% else %}
      <div class="shopping-cart-screen">
        <i class="fas fa-shopping-cart text-silver fa-4x mb-4" aria-hidden="true"></i>
        <p class="text-silver text-center lead">{{ 'empty_shopping_cart'|trans }}</p>
      </div>
    {% endfor %}
  </section>
{% endblock %}
