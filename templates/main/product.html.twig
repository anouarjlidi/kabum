{% extends 'main/layout.html.twig' %}

{% block title %}{{ product.name }} - KaBuM!{% endblock %}

{% block main %}
  <section class="container-fluid">
    <div class="px-0 px-md-3">
      <h3 class="font-weight-light text-kabum-dark-blue my-3">{{ product.name }}</h3>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="{{ path('main_page') }}">In√≠cio</a></li>
          <li class="breadcrumb-item">
            <a href="{{ path('category_page', {slug: product.category.slug}) }}">
              {{ product.category.name }}
            </a>
          </li>
        </ol>
      </nav>
      <div class="row mt-4">
        <div class="col-sm-5 col-lg-4 col-xl-3">
          <img src="{{ asset(product.image) }}" class="img-fluid" alt="Product image"/>
        </div>
        <div class="col-sm-7 col-lg-8 col-xl-9">
          <p>{{ product.description }}</p>
          <h3 class="font-weight-bold text-kabum-orange text-center text-sm-left">
            R$ {{ (product.price / 100)|number_format(2, ',', '.') }}
          </h3>
        </div>
      </div>
      <p class="mt-5">{{ product.longDescription|markdown_to_html }}</p>
    </div>
  </section>
{% endblock %}
