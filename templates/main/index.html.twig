{% extends 'main/layout.html.twig' %}

{% block title %}KaBuM! - Explosão de Preços Baixos!{% endblock %}

{% block highlight_description %}
  <div class="highlight-description-content h-100 d-flex flex-column justify-content-center text-center pb-5 pt-4 py-md-4 px-4">
    <h1 class="font-weight-bold text-kabum-dark-blue">pi-top, a Raspberry Pi computer</h1>
    <p class="lead text-kabum-dark-blue">A computer for making, and everything else. A computer for making, and everything else. A computer for making, and everything else.</p>
  </div>
{% endblock %}

{% block sidebar %}
  <div class="accordion py-3" id="accordionExample">
    <div class="card">
      <div class="card-header" id="headingOne">
        <h2 class="mb-0">
          <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
            Hardware
          </button>
        </h2>
      </div>

      <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
        <div class="card-body">
          <nav class="nav">
            <a class="nav-link active" href="#">Processadores</a>
            <a class="nav-link" href="#">Fontes</a>
            <a class="nav-link" href="#">Placas gráficas</a>
            <a class="nav-link" href="#">SSDs</a>
          </nav>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-header" id="headingTwo">
        <h2 class="mb-0">
          <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
            Computadores
          </button>
        </h2>
      </div>
      <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
        <div class="card-body">
          <nav class="nav">
            <a class="nav-link active" href="#">Desktops</a>
            <a class="nav-link" href="#">Servidores</a>
            <a class="nav-link" href="#">Laptops</a>
            <a class="nav-link" href="#">Tablets</a>
          </nav>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-header" id="headingThree">
        <h2 class="mb-0">
          <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
            Periféricos
          </button>
        </h2>
      </div>
      <div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordionExample">
        <div class="card-body">
          <nav class="nav">
            <a class="nav-link active" href="#">Acessórios</a>
            <a class="nav-link" href="#">Mochilas</a>
            <a class="nav-link" href="#">Teclado e mouse</a>
            <a class="nav-link" href="#">Pen drive</a>
          </nav>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

