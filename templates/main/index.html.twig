{% extends 'main/layout.html.twig' %}

{% block title %}KaBuM! - Explosão de Preços Baixos!{% endblock %}

{% block main %}
  <section class="highlight">
    <div class="highlight-description justify-content-center justify-content-xl-start bg-light">
      <div class="highlight-description-content d-flex flex-column justify-content-center pb-5 pt-4 py-md-5 pl-md-5 pr-md-4 px-4">
        <h1 class="font-weight-bold text-kabum-dark-blue">Raspberry Pi 4</h1>
        <p class="lead text-black">Your tiny, dual-display, desktop computer</p>
        <div>
          <a href="#" class="btn btn-kabum-orange">
            Find out more
          </a>
        </div>
      </div>
    </div>
    <div class="highlight-picture"></div>
  </section>
  <section class="container-fluid">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4">
      {% for product in products %}
        <div class="col px-4 py-5">
          <article>
            <a href="{{ path('product_page', {slug: product.slug}) }}">
              <p class="text-kabum-dark-blue lead">{{ product.name }}</p>
            </a>
            <div class="mb-3">
              <small class="text-secondary">{{ product.description }}</small>
            </div>
            <div class="bg-kabum-orange rounded text-center py-1">
              <h5 class="font-weight-bold text-white">
                R$ {{ (product.price / 100)|number_format(2, ',', '.') }}
              </h5>
            </div>
          </article>
        </div>
      {% endfor %}
    </div>
  </section>
{% endblock %}
