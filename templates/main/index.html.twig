{% extends 'main/layout.html.twig' %}

{% block title %}KaBuM! - Explosão de Preços Baixos!{% endblock %}

{% block main %}
  <section class="highlight">
    <div class="highlight-description justify-content-center justify-content-xl-start bg-light">
      <div class="highlight-description-content d-flex flex-column justify-content-center pb-5 pt-4 py-md-5 pl-md-5 pr-md-4 px-4">
        <h1 class="font-weight-bold text-kabum-dark-blue">Raspberry Pi 4</h1>
        <p class="lead text-black">Your tiny, dual-display, desktop computer</p>
        <div>
          <a href="#" class="btn btn-kabum-orange">
            Find out more
          </a>
        </div>
      </div>
    </div>
    <div class="highlight-picture"></div>
  </section>
  <section class="container-fluid my-4">
    <div class="row row-columns">
      {% for product in products %}
        <div class="col p-4 border rounded">
          <article>
            <h4 class="text-kabum-dark-blue">{{ product.name }}</h4>
            <p class="text-secondary">{{ product.description }}</p>
            <span class="font-weight-bold text-kabum-orange">{{ product.price }}</span>
          </article>
        </div>
      {% endfor %}
    </div>
  </section>
{% endblock %}
