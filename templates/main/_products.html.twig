{# This is used to give a special class to the first item of the loop, so
it can be focused when a new batch of items is loaded onto the page. #}
{% set firstItem = true %}

{# To always get an integer, we use Twig's round filter. This way, when there are
10 pages and the last one is only half-full, we get 10 instead of 9.5. #}
{% set lastPage = (pagination.getTotalItemCount / pagination.getItemNumberPerPage)|round(0, 'ceil') %}

{% for product in pagination %}
  <article class="col feed-item feed-new-item p-4 {% if firstItem == true %}focus-me{% endif %}"
    tabindex="-1" data-number-of-results="{{ pagination.getTotalItemCount }}"
    data-page-size="{{ pagination.getItemNumberPerPage }}" data-last-page="{{ lastPage }}"
    aria-labelledby="{{ product.id ~ '_label' }}">
    <a href="{{ path('product_page', {slug: product.slug}) }}">
      <img src="{{ asset(product_image_directory ~ product.image) }}"
        class="img-fluid" alt="{{ 'product_image'|trans }}"/>
      <p id="{{ product.id ~ '_label' }}" class="text-kabum-dark-blue lead text-break">
        {{ product.name }}
      </p>
    </a>
    <div class="mb-3">
      <small class="text-secondary">{{ product.description }}</small>
    </div>
    <div class="bg-kabum-orange rounded text-center py-1">
      <h5 class="font-weight-bold text-white">
        R$ {{ (product.price / 100)|number_format(2, ',', '.') }}
      </h5>
    </div>
  </article>
  {% set firstItem = false %}
{% endfor %}

<article class="feed-control feed-item feed-new-item col p-4" tabindex="-1">
  <div class="d-flex flex-column h-100 justify-content-center align-items-center">
    <button class="feed-load-more bg-transparent border-0 p-0 w-100 h-100"
      role="button">
      <div class="feed-loading-label feed-label">
        <div class="d-flex flex-column align-items-center">
          <div class="spinner-grow text-kabum-orange">
            <span class="sr-only">{{ 'loading'|trans }}</span>
          </div>
        </div>
      </div>
      <div class="feed-ready-label hidden d-flex flex-column justify-content-center kabum-button w-100 h-100">
        <div>
          <div>
            <i class="fas fa-boxes fa-4x text-center mb-4" aria-hidden="true"></i>
          </div>
          <div>
            <span class="lead text-center">{{ 'see_more_products'|trans }}</span>
          </div>
        </div>
      </div>
      <div class="feed-error-label feed-label">
        <div class="d-flex flex-column">
          <i class="fas fa-exclamation-triangle fa-4x text-strawberry text-center mb-4" aria-hidden="true"></i>
          <span class="lead text-center text-strawberry">{{ 'something_wrong_click_try_again'|trans }}</span>
        </div>
      </div>
      <div class="feed-nothing-else-label feed-label">
        <div class="d-flex flex-column">
          <i class="fas fa-box-open text-silver fa-4x text-center mb-4" aria-hidden="true"></i>
          <span class="lead text-center text-secondary">{{ 'this_is_all'|trans }}</span>
        </div>
      </div>
    </button>
  </div>
</article>
