{% set currentLocale = app.request.locale %}

<!DOCTYPE html>
<html lang="{{ currentLocale }}">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}KaBuM!{% endblock %}</title>
    {% block stylesheets %}
      {{ encore_entry_link_tags('app') }}
    {% endblock %}
  </head>
  <body>
    {% block header %}
      <header class="navbar-sticky">
        <nav class="navbar navbar-expand navbar-dark bg-dark header">
          <a class="navbar-brand" href="{{ path('main_page') }}">
            <img src="{{ asset('images/kabum.png') }}" width="80" height="27" alt="Site logo">
          </a>

          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link px-3" href="#" aria-label="Shopping cart">
                <i class="fas fa-shopping-cart" aria-hidden="true"></i>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link px-3" href="#" aria-label="Wishlist">
                <i class="fas fa-bookmark" aria-hidden="true"></i>
              </a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle px-3" href="#" id="userMenu" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" aria-label="User menu">
                <i class="fas fa-user" aria-hidden="true"></i>
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userMenu">
                <a class="dropdown-item" href="#">Dashboard</a>
                <a class="dropdown-item" href="#">Settings</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#">Log out</a>
              </div>
            </li>
          </ul>
        </nav>
      </header>
    {% endblock %}
    {% block body %}{% endblock %}
    {% block footer %}
      <footer>
      </footer>
    {% endblock %}
    {% block javascripts %}
      {{ encore_entry_script_tags('app') }}
    {% endblock %}
  </body>
</html>
