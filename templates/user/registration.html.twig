{% extends 'base.html.twig' %}

{% block title %}{{ 'registration'|trans }} - {{ parent() }}{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  {{ encore_entry_link_tags('user') }}
{% endblock %}

{% block body %}
  <div class="container">
    <div class="text-center mb-3 mt-4">
      <a href="{{ path('main_page') }}">
        <img src="{{ asset('images/kabum.png') }}" alt="{{ 'logotype'|trans }}" width="200"/>
      </a>
    </div>
    <h4 class="text-kabum-dark-blue text-center mb-5">
      {{ 'create_an_account'|trans }}
    </h4>

    {{ form_start(form) }}
      {{ form_errors(form) }}

      {{ form_row(form.username) }}

      <div class="row">
        <div class="col-md">
          {{ form_row(form.password.first) }}
        </div>
        <div class="col-md">
          {{ form_row(form.password.second) }}
        </div>
      </div>

      <div class="container">
        <div class="row align-items-center border rounded p-3 my-4">
          <div class="col-md-7 mb-4 mb-md-0">
            {{ form_widget(form.agreeTerms) }}
          </div>
          <div class="col-md-5">
            {# The submit button is created here to preserve the form's reusability
            for other purposes #}
            <div class="text-md-right text-center">
              <input type="submit" class="btn btn-block btn-lg btn-kabum-light-blue" value="{{ 'continue'|trans }}"/>
            </div>
          </div>
        </div>
      </div>
    {{ form_end(form) }}

    <div class="text-center mt-4">
      <small class="text-muted">Copyright &copy; <time>{{ 'now'|date('Y') }}</time> Douglas Silva</small>
    </div>
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ encore_entry_script_tags('user') }}
{% endblock %}
