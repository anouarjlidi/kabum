{% extends 'base.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  {{ encore_entry_link_tags('user') }}
{% endblock %}

{% macro renderPanelItem(targetRoute, label, iconClasses) %}
  {% set currentRouteName = app.request.attributes.get('_route') %}

  {% if currentRouteName == targetRoute %}
    <a class="control-panel-item control-panel-current-item" href="{{ path(targetRoute) }}"
      aria-current="page" aria-label="{{ label|trans }}" title="{{ label|trans }}">
      <div class="d-flex">
        <div class="align-self-center mr-lg-2 mr-sm-0 mr-2">
          <i class="{{ iconClasses }}" aria-hidden="true"></i>
        </div>
        <div class="control-panel-label">
          {{ label|trans }}
        </div>
      </div>
    </a>
  {% else %}
    <a class="control-panel-item" href="{{ path(targetRoute) }}" aria-label="{{ label|trans }}"
      title="{{ label|trans }}">
      <div class="d-flex">
        <div class="align-self-center mr-lg-2 mr-sm-0 mr-2">
          <i class="{{ iconClasses }}" aria-hidden="true"></i>
        </div>
        <div class="control-panel-label">
          {{ label|trans }}
        </div>
      </div>
    </a>
  {% endif %}
{% endmacro %}

{% block body %}
  <div class="d-flex">
    <header class="sticky-sidebar bg-light">
      <div>
        <a class="control-panel-item" href="{{ path('main_page') }}"
          aria-label="{{ 'back_to_store'|trans }}" title="{{ 'back_to_store'|trans }}">
          <div class="d-flex">
            <div class="align-self-center mr-lg-2 mr-sm-0 mr-2">
              <i class="fas fa-arrow-left" aria-hidden="true"></i>
            </div>
            <div class="control-panel-label">
              {{ 'back_to_store'|trans }}
            </div>
          </div>
        </a>
        {{ _self.renderPanelItem('user_account', 'account_settings', 'fas fa-id-card') }}
      </div>
    </header>
    <main id="main-content" class="d-flex flex-column w-100">
      {% block main %}{% endblock %}
    </main>
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ encore_entry_script_tags('user') }}
{% endblock %}
