{% extends 'base.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  {{ encore_entry_link_tags('user') }}
{% endblock %}

{% import '_macros.html.twig' as macros %}

{% block navigation_panel %}
  <h5 class="text-kabum-orange p-3 mt-2 mb-0">{{ 'user_settings'|trans }}</h5>
  {{ macros.renderMenuItem('user_account', 'account', 'fas fa-id-card') }}
{% endblock %}

{% block body %}
  <div class="d-flex">
    <div class="user-settings-sidebar">
      {{ macros.renderMenuItem('user_account', 'account', 'fas fa-id-card') }}
    </div>
    <main id="main-content" class="w-100">
      {% block main %}{% endblock %}
    </main>
  </div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  {{ encore_entry_script_tags('user') }}
{% endblock %}
